@model FinalProject.Models.Publishers

@{
    Layout = "_Layout";
    var title = "UPDATE Publishers";
    ViewData["Title"] = title;
}


<h2>@title</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="m-1 p-1" method="post">
    <div class="form-group">
        <label asp-for="Pub_id"></label>
        <input asp-for="Pub_id" type="text" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pub_name"></label>
        <input asp-for="Pub_name" type="text" class="form-control" />
        <span asp-validation-for="Pub_name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> 