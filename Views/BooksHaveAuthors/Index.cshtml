@model IEnumerable<FinalProject.Models.BooksHaveAuthors>

@{
    Layout = "_Layout";
    var title = "READ BooksHaveAuthors";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Book_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.Author_name)
            </td>
            <td><a asp-action="Update" asp-route-Book_id="@item.Book_id" asp-route-Author_id="@item.Author_id">Update</a></td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { Book_id = item.Book_id, Author_id = item.Author_id })
            </td>
        </tr>
        }
    </tbody>
</table>